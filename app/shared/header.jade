.header(ng-controller='HeaderCtrl' ng-cloak)
  md-toolbar
    .md-toolbar-tools
      md-button.md-icon-button.home-button(aria-label='Home' ui-sref='home')
        md-icon(md-svg-icon='../images/logo.svg')
      span(flex)
      md-button.md-raised.other-buttons(aria-label='Sign Up' ui-sref='signup' ng-if='!currentUser')
        | Sign Up
      .logout(ng-if='currentUser' layout='row')
        p(ui-sref='documents') {{currentUser.name.first}} {{currentUser.name.second}}
        md-menu(md-position-mode='target-right target')
          md-button(aria-label='Sign Out' ng-click='$mdOpenMenu($event)')
            md-icon
              i(class='material-icons') keyboard_arrow_down
            md-tooltip Logout
          md-menu-content(width='3' style='margin-top:60px')
            md-menu-item(style='background: rgb(41,38,47)')
              md-button(ng-click='openUserDetails()')
                p(flex) User Details
            md-menu-item(style='background: rgb(41,38,47)')
              md-button(ng-click='logout()')
                p(flex) Logout

      md-button.md-raised.other-buttons(aria-label='Log In form' ng-click='openLoginForm()' ng-hide='isOpenRight()' style='margin-right: 40px' ng-if='!currentUser')
        a Log In
  .mdSideNav
    md-sidenav.md-sidenav-right.md-whiteframe-z2(md-component-id='right')
      md-button(md-icon-button aria-label='Cancel Login Form' ng-click='closeLoginForm()' style='margin-left: 220px').cancelButton
          i(class='material-icons') cancel
      md-content.md-padding
        form(ng-submit='login()')
          md-input-container.md-block(md-no-float style='margin-bottom: 0px')
            md-icon
              i(class='material-icons') face
            input(required type='text' ng-model='user.username' placeholder='Username')
          md-input-container.md-block(md-no-float style='margin-bottom: 0px; margin-top: 10px')
            md-icon
              i(class='material-icons') vpn_key
            input(required type='password' ng-model='user.password' placeholder='Password')
          md-button.md-raised(aria-label='Sign In' type='submit' style='box-shadow: none; background-color: rgb(0,209,193)').signUpHeader
            | SUBMIT
          p {{messageLogin}}

