.documentContainer(layout='row' ng-if='currentUser')
  .documentChild5(flex='5')
    md-content
      md-button.md-icon-button.md-primary(aria-label='Create Document' ng-click='openOffscreen($event)')
        md-icon
          i(class='fa fa-plus fa-2x')

  .documentChild70(flex='65')
    .md-padding
      h3.md-subheader My Documents
      div(ng-cloak='')
        md-grid-list(md-cols-sm='2', md-cols-md='2', md-cols-gt-md='4', md-row-height-md='1:1.3' md-row-height-gt-md='1:1.3', md-row-height='2:2', md-gutter='12px', md-gutter-gt-sm='8px')
          md-grid-tile.creteDocument(md-ink-ripple ng-click='openOffscreen($event)')
            img(src='../images/createDocument.png' style='width: 100%; height: 100%; border: 1px solid rgb(218,218,218)')
            md-grid-tile-footer
              h3 #1: (3r x 2c)
          md-grid-tile(style='border: 1px solid rgb(218,218,218)' layout='column' ng-repeat="document in userDocs | orderBy:'-dateCreated'")
            md-card(style='width: 100%; height: 100%; margin: 0px')
              .md-padding(flex)
                h4(style='margin-top: 0px; border-bottom: 1px solid rgb(218,218,218); padding-bottom: 7px; margin-bottom: 10px') {{document.title}}
                p(style='font-size: x-small') {{document.content}}
              md-card-actions(layout='column')
                md-button(aria-label='More Options' style='width: 4px; min-width: 35px;')
                  md-icon(flex)
                    i(class='material-icons') more_vert

  .documentChild30(flex='30' ng-cloak)
    md-content
      md-list
        md-subheader.md-no-sticky Recent Documents
        md-list-item(ng-repeat="document in allDocuments | orderBy:'-dateCreated'")
          md-card
            md-card-title-text
              h3.md-padding {{document.title}}
            md-card-content
              p {{document.content}}
            md-card-title-text(style='background: rgb(109,117,120)')
              p.md-padding(style='margin-bottom: 0px; color: white; padding-bottom: 5px') Created by {{document.owner}}
              p.md-padding(style='margin-bottom: 0px; color: white; padding-top: 0px') {{document.dateCreated | date: 'medium'}}










